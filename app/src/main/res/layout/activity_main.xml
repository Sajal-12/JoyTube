            android:layout_marginLeft="12dp"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="Jacquiline - sexy !!" />
    </LinearLayout>
</androidx.constraintlayout.widget.ConstraintLayout>